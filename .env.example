# =============================================================================
# AI Employee Workflow System - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit your .env file with real credentials to version control

# -----------------------------------------------------------------------------
# AI Model Configuration (Required)
# -----------------------------------------------------------------------------
# RDSec AI Endpoint - Trend Micro's internal AI infrastructure
# Get your API key from: https://api.rdsec.trendmicro.com/
OPENAI_API_KEY="your_rdsec_ai_endpoint_jwt_token_here"
OPENAI_BASE_URL=https://api.rdsec.trendmicro.com/prod/aiendpoint/v1/
CHAT_MODEL="gpt-4o"
EMBEDDING_MODEL=text-embedding-3-large

# Alternative endpoint configuration (for compatibility)
ENDPOINT_BASE_URL=https://api.rdsec.trendmicro.com/prod/aiendpoint/v1/

# -----------------------------------------------------------------------------
# GitHub Integration (Required)
# -----------------------------------------------------------------------------
# Personal Access Token for GitHub MCP Server
# Create at: https://dsgithub.trendmicro.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_PERSONAL_ACCESS_TOKEN='your_github_personal_access_token_here'
# Target repository for pull requests
GITHUB_REPO_URL=https://dsgithub.trendmicro.com/your-username/your-repo

# -----------------------------------------------------------------------------
# Confluence Integration (Required)
# -----------------------------------------------------------------------------
# Confluence space for documentation
# Find your space key in Confluence space settings
CONFLUENCE_SPACE_KEY='your_confluence_space_key_here'
CONFLUENCE_BASE_URL=https://yourcompany.atlassian.net
CONFLUENCE_USER_EMAIL=your_email@yourcompany.com

# Atlassian MCP Server URL (DO NOT CHANGE)
ATLASSIAN_MCP_SERVER_URL='https://mcp.atlassian.com/v1/sse'

# -----------------------------------------------------------------------------
# Slack Integration (Required)
# -----------------------------------------------------------------------------
# Slack bot token and channel for notifications
# Create bot at: https://api.slack.com/apps
# Required scopes: chat:write, channels:read
SLACK_BOT_TOKEN='xoxb-your-slack-bot-token-here'
SLACK_CHANNEL_ID='your_slack_channel_id_here'
SLACK_CHANNEL_NAME='your_channel_name'

# -----------------------------------------------------------------------------
# Knowledge Base Configuration
# -----------------------------------------------------------------------------
# ChromaDB path for RAG system
CHROMA_DB_PATH=./data/chroma_db

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
WORKSPACE_DIR=./workspace
OUTPUT_DIR=./outputs
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# Optional Configuration (Uncomment and configure if needed)
# =============================================================================

